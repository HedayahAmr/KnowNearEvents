<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.events.Ev3"
    android:background="@drawable/bb"
    tools:showIn="@layout/activity_ev3">
    <TextView
        android:id="@+id/Ev_Inf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Information"
        android:textColor="#4b33ff"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/Ev_Na"
        android:layout_width="361dp"
        android:layout_height="53dp"
        android:hint="Event Name"
        android:textColor="#4b33ff"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/Ev_Inf"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        android:layout_marginTop="23dp" />

    <EditText
        android:id="@+id/Ev_Lo"
        android:layout_width="362dp"
        android:layout_height="51dp"
        android:hint="Location"
        android:textColor="#4b33ff"
        android:textSize="18dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.532" />

    <EditText
        android:id="@+id/Ev_De"
        android:layout_width="362dp"
        android:layout_height="52dp"
        android:hint="More Details"
        android:textColor="#4b33ff"
        android:textSize="18dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.671" />

    <EditText
        android:id="@+id/editTime"
        android:layout_width="358dp"
        android:layout_height="49dp"
        android:ems="10"
        android:hint="Time"
        android:textColor="#4b33ff"
        android:textSize="18dp"
        android:inputType="time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.398" />

    <EditText
        android:id="@+id/editDate"
        android:layout_width="359dp"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="Date"
        android:textColor="#4b33ff"
        android:textSize="18dp"
        android:inputType="date"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.267" />

    <Button
        android:id="@+id/add2"
        style="@style/AlertDialog.AppCompat.Light"
        android:layout_width="144dp"
        android:layout_height="60dp"
        android:layout_margin="80dp"
        android:text="Add "
        android:textColor="#4e33ff"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Ev_De"
        app:layout_constraintVertical_bias="0.692" />


</android.support.constraint.ConstraintLayout>
